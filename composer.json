{
  "name": "boltci/shards",
  "description": "Patch PHPUnit and Paratest to shard your Laravel test suite.",
  "type": "library",
  "require": {
    "php": "^8.1",
    "illuminate/testing": "^10.0|^11.0|^12.0",
    "illuminate/support": "^10.0|^11.0|^12.0",
    "illuminate/console": "^10.0|^11.0|^12.0",
    "brianium/paratest": "^7.2.0"
  },
  "autoload": {
    "psr-4": {
      "BoltCI\\Shards\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "BoltCI\\Shards\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "laravel/pint": "^1.22",
    "phpunit/phpunit": "^11.5"
  },
  "extra": {
    "laravel": {
      "providers": [
        "BoltCI\\Shards\\BoltCIShardsServiceProvider"
      ]
    }
  }
}
